                <path d="M 57 110 Q 67 120, 77 110" fill="none" stroke="#6E4BFB" stroke-width="2" />
                
                <!-- Speaker -->
                <rect x="330" y="65" width="20" height="30" rx="2" fill="#333" />
                <path d="M 350 65 L 360 55 L 360 105 L 350 95 Z" fill="#333" />
                <path d="M 365 70 Q 375 80, 365 90" fill="none" stroke="#333" stroke-width="2" />
