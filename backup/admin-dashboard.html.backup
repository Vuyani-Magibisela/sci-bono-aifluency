<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - AI Fluency</title>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="images/favicon.ico">
</head>
<body>
    <div class="dashboard-container">
        <!-- Sidebar -->
        <aside class="dashboard-sidebar" id="sidebar">
            <div class="sidebar-header">
                <img src="images/logo.svg" alt="Logo">
                <h2>AI Fluency</h2>
            </div>

            <div class="sidebar-profile">
                <div class="profile-avatar">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="profile-name">Admin User</div>
                <div class="profile-role">System Administrator</div>
            </div>

            <nav class="sidebar-nav">
                <a href="#" class="nav-item active">
                    <i class="fas fa-th-large"></i>
                    <span>Dashboard</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-book"></i>
                    <span>Courses</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-chalkboard-teacher"></i>
                    <span>Instructors</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-user-graduate"></i>
                    <span>Students</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-chart-bar"></i>
                    <span>Analytics</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-file-alt"></i>
                    <span>Reports</span>
                </a>
                <a href="#" class="nav-item">
                    <i class="fas fa-cogs"></i>
                    <span>System Settings</span>
                </a>
                <a href="index.html" class="nav-item">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="dashboard-main">
            <!-- Top Bar -->
            <div class="dashboard-topbar">
                <div class="topbar-left">
                    <h1>Admin Dashboard</h1>
                </div>
                <div class="topbar-right">
                    <div class="topbar-search">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Search users, courses...">
                    </div>
                    <div class="topbar-icon">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">8</span>
                    </div>
                    <div class="topbar-profile">
                        <div class="topbar-avatar">AD</div>
                        <span>Admin</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>

            <!-- Dashboard Content -->
            <div class="dashboard-content">
                <!-- Welcome Banner -->
                <div class="welcome-banner">
                    <h2>System Overview</h2>
                    <p>Monitor and manage the AI Fluency platform</p>
                </div>

                <!-- Statistics Cards -->
                <div class="dashboard-grid">
                    <div class="dashboard-card">
                        <div class="card-header">
                            <div>
                                <div class="card-title">Total Users</div>
                                <div class="card-value">1,247</div>
                            </div>
                            <div class="card-icon blue">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                        <div class="card-description">+45 new this month</div>
                    </div>

                    <div class="dashboard-card">
                        <div class="card-header">
                            <div>
                                <div class="card-title">Active Courses</div>
                                <div class="card-value">12</div>
                            </div>
                            <div class="card-icon green">
                                <i class="fas fa-book"></i>
                            </div>
                        </div>
                        <div class="card-description">3 pending approval</div>
                    </div>

                    <div class="dashboard-card">
                        <div class="card-header">
                            <div>
                                <div class="card-title">Instructors</div>
                                <div class="card-value">24</div>
                            </div>
                            <div class="card-icon orange">
                                <i class="fas fa-chalkboard-teacher"></i>
                            </div>
                        </div>
                        <div class="card-description">2 new applications</div>
                    </div>

                    <div class="dashboard-card">
                        <div class="card-header">
                            <div>
                                <div class="card-title">Revenue</div>
                                <div class="card-value">$24.8K</div>
                            </div>
                            <div class="card-icon red">
                                <i class="fas fa-dollar-sign"></i>
                            </div>
                        </div>
                        <div class="card-description">+12% from last month</div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="dashboard-card" style="margin-bottom: 2rem;">
                    <h3 style="margin-bottom: 1.5rem;">Quick Actions</h3>
                    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
                        <button class="action-btn edit" style="padding: 1rem; width: 100%;">
                            <i class="fas fa-user-plus"></i> Add New User
                        </button>
                        <button class="action-btn edit" style="padding: 1rem; width: 100%;">
                            <i class="fas fa-book"></i> Create Course
                        </button>
                        <button class="action-btn edit" style="padding: 1rem; width: 100%;">
                            <i class="fas fa-file-export"></i> Export Report
                        </button>
                        <button class="action-btn edit" style="padding: 1rem; width: 100%;">
                            <i class="fas fa-envelope"></i> Send Announcement
                        </button>
                    </div>
                </div>

                <!-- User Management Table -->
                <div class="data-table" style="margin-bottom: 2rem;">
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                        <h3>Recent Users</h3>
                        <button class="action-btn edit">
                            <i class="fas fa-eye"></i> View All
                        </button>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Joined</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>John Doe</td>
                                <td>john.doe@email.com</td>
                                <td>Student</td>
                                <td>2025-01-15</td>
                                <td><span class="status-badge active">Active</span></td>
                                <td>
                                    <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                                    <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td>Jane Smith</td>
                                <td>jane.smith@email.com</td>
                                <td>Student</td>
                                <td>2025-01-14</td>
                                <td><span class="status-badge active">Active</span></td>
                                <td>
                                    <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                                    <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td>Dr. Sarah Johnson</td>
                                <td>sarah.j@email.com</td>
                                <td>Instructor</td>
                                <td>2025-01-10</td>
                                <td><span class="status-badge active">Active</span></td>
                                <td>
                                    <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                                    <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td>Mike Johnson</td>
                                <td>mike.j@email.com</td>
                                <td>Student</td>
                                <td>2025-01-08</td>
                                <td><span class="status-badge pending">Pending</span></td>
                                <td>
                                    <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                                    <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td>Emily Brown</td>
                                <td>emily.b@email.com</td>
                                <td>Student</td>
                                <td>2025-01-05</td>
                                <td><span class="status-badge inactive">Inactive</span></td>
                                <td>
                                    <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                                    <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Course Management Table -->
                <div class="data-table">
                    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                        <h3>Course Overview</h3>
                        <button class="action-btn edit">
                            <i class="fas fa-eye"></i> View All
                        </button>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Course Name</th>
                                <th>Instructor</th>
                                <th>Enrolled</th>
                                <th>Completion Rate</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>AI Fluency Course</td>
                                <td>Dr. Sarah Johnson</td>
                                <td>82</td>
                                <td>65%</td>
                                <td><span class="status-badge active">Active</span></td>
                                <td>
                                    <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                                    <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td>Machine Learning Basics</td>
                                <td>Dr. Sarah Johnson</td>
                                <td>45</td>
                                <td>42%</td>
                                <td><span class="status-badge active">Active</span></td>
                                <td>
                                    <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                                    <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td>Data Science Fundamentals</td>
                                <td>Dr. Sarah Johnson</td>
                                <td>29</td>
                                <td>55%</td>
                                <td><span class="status-badge active">Active</span></td>
                                <td>
                                    <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                                    <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                            <tr>
                                <td>Programming Fundamentals</td>
                                <td>Prof. Mike Chen</td>
                                <td>67</td>
                                <td>48%</td>
                                <td><span class="status-badge pending">Under Review</span></td>
                                <td>
                                    <button class="action-btn edit"><i class="fas fa-edit"></i></button>
                                    <button class="action-btn delete"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
    </div>

    <script src="js/script.js"></script>
    <script>
        // Mobile sidebar toggle
        const hamburger = document.getElementById('hamburger');
        const sidebar = document.getElementById('sidebar');

        if (hamburger) {
            hamburger.addEventListener('click', function() {
                sidebar.classList.toggle('mobile-open');
            });
        }
    </script>
</body>
</html>
